{
  "name": "webdb-i-challenge",
  "version": "1.0.0",
  "repository": "https://github.com/LambdaSchool/webdb-i-challenge",
  "main": "./build/index.js",
  "scripts": {
    "check-format": "yarn run prettier --ignore-path .eslintignore --list-different",
    "check-types": "tsc --watch",
    "format": "yarn run prettier --ignore-path .eslintignore --write",
    "lint": "eslint --ext .ts .",
    "prettier": "prettier --ignore-path .eslintignore \"**/*.+(json|js|ts)\"",
    "server": "nodemon ./build/index.js",
    "validate": "npm-run-all --parallel check-format lint"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.+(js|json|ts)": [
      "prettier --write",
      "git add"
    ],
    "package.json": [
      "sort-package-json",
      "git add"
    ]
  },
  "dependencies": {
    "express": "^4.17.1",
    "fp-ts": "^2.4.3",
    "knex": "^0.20.1",
    "morgan": "^1.9.1",
    "sqlite3": "^4.1.0",
    "swagger-ui-express": "^4.1.3"
  },
  "devDependencies": {
    "@types/express": "^4.17.2",
    "@types/morgan": "^1.7.37",
    "@types/node": "^13.1.7",
    "@types/swagger-ui-express": "^4.1.1",
    "@typescript-eslint/eslint-plugin": "^2.16.0",
    "@typescript-eslint/parser": "^2.16.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.9.0",
    "eslint-plugin-functional": "^3.0.1",
    "eslint-plugin-import": "^2.20.0",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-optimize-regex": "^1.1.7",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^4.0.10",
    "lint-staged": "^9.5.0",
    "nodemon": "^2.0.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1",
    "sort-package-json": "^1.39.0",
    "ts-node": "^8.6.2",
    "typescript": "^3.7.4"
  }
}

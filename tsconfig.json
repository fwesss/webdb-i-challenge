{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "data/*": ["/data"]
    },
    "declaration": true,
    "importHelpers": true,
    "module": "commonjs",
    "outDir": "./build",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "target": "es2017",
    "lib": ["esnext"],
    "allowJs": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": ["."],
  "exclude": ["node_modules", "build"]
}

{
  "openapi": "3.0.0",
  "servers": [
    {
      "url": "/api"
    }
  ],
  "info": {
    "description": "Accounts API",
    "version": "1.1.1",
    "title": "Accounts API",
    "contact": {
      "email": "feller.westley@gmail.com"
    }
  },
  "paths": {
    "/accounts": {
      "get": {
        "summary": "Retrieves queried accounts",
        "operationId": "retrieveAllAccounts",
        "description": "Get a list of all accounts",
        "parameters": [
          {
            "in": "query",
            "name": "limit",
            "schema": {
              "type": "integer",
              "minimum": 0
            },
            "description": "The number of accounts to return",
            "example": 5
          },
          {
            "in": "query",
            "name": "sortby",
            "schema": {
              "type": "string",
              "enum": ["id", "name", "budget"]
            },
            "description": "The column to sort the accounts by",
            "example": "budget"
          },
          {
            "in": "query",
            "name": "sortdir",
            "schema": {
              "type": "string",
              "enum": ["desc", "asc"]
            },
            "description": "The direction to sort the accounts",
            "example": "desc"
          }
        ],
        "responses": {
          "200": {
            "description": "Queried accounts",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "integer"
                      },
                      "name": {
                        "type": "string"
                      },
                      "budget": {
                        "type": "integer"
                      }
                    }
                  },
                  "example": [
                    {
                      "id": 12,
                      "name": "Ultra Corp",
                      "budget": 54000
                    },
                    {
                      "id": 2,
                      "name": "Big Company",
                      "budget": 47620
                    },
                    {
                      "id": 3,
                      "name": "Not So Great Inc",
                      "budget": 36570
                    },
                    {
                      "id": 37,
                      "name": "Super Duper Mart",
                      "budget": 2500
                    },
                    {
                      "id": 6,
                      "name": "Cheapr",
                      "budget": 120
                    }
                  ]
                }
              }
            }
          },
          "500": {
            "description": "Server error",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string",
                      "example": "The information could not be retrieved"
                    }
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Adds an account",
        "operationId": "addAccount",
        "description": "Adds an account to the database",
        "responses": {
          "201": {
            "description": "item created",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Account"
                }
              }
            }
          },
          "400": {
            "description": "Invalid request object",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "errors": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      },
                      "example": ["Missing name", "Missing budget"]
                    }
                  }
                }
              }
            }
          },
          "409": {
            "description": "name of accounts must be unique"
          },
          "500": {
            "description": "Server error",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string",
                      "example": "The information could not be added"
                    }
                  }
                }
              }
            }
          }
        },
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["name", "budget"],
                "properties": {
                  "name": {
                    "type": "string",
                    "example": "ACME INC"
                  },
                  "budget": {
                    "type": "integer",
                    "example": 4267
                  }
                }
              }
            }
          },
          "description": "account to add"
        }
      }
    },
    "/accounts/{id}": {
      "get": {
        "summary": "Retrieves a specified account",
        "operationId": "retrieveOneAccount",
        "description": "Get one account",
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "schema": {
              "type": "integer",
              "minimum": 1,
              "example": 2
            },
            "description": "The account ID"
          }
        ],
        "responses": {
          "200": {
            "description": "One account",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "required": ["id", "name", "budget"],
                  "properties": {
                    "id": {
                      "type": "integer",
                      "example": 2
                    },
                    "name": {
                      "type": "string",
                      "example": "Big Corp"
                    },
                    "budget": {
                      "type": "integer",
                      "example": 6577
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Invalid id",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string",
                      "example": "Invalid account ID"
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Server error",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string",
                      "example": "The information could not be retrieved"
                    }
                  }
                }
              }
            }
          }
        }
      },
      "put": {
        "summary": "Updates an account",
        "operationId": "updateOneAccount",
        "description": "Updates an account in the database",
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "schema": {
              "type": "integer",
              "minimum": 1,
              "example": 2
            },
            "description": "The account ID"
          }
        ],
        "responses": {
          "200": {
            "description": "Item updated",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "required": ["id", "name", "budget"],
                  "uniqueItems": true,
                  "properties": {
                    "id": {
                      "type": "integer",
                      "example": 2
                    },
                    "name": {
                      "type": "string",
                      "example": "Giant Corp"
                    },
                    "budget": {
                      "type": "integer",
                      "example": 4500
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Invalid input, object invalid",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "errors": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      },
                      "example": ["Missing name", "Missing budget"]
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Invalid id",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string",
                      "example": "Invalid account ID"
                    }
                  }
                }
              }
            }
          },
          "409": {
            "description": "an existing account with that name already exists",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string",
                      "example": "name of accounts must be unique"
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Server error",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string",
                      "example": "The information could not be updated"
                    }
                  }
                }
              }
            }
          }
        },
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["name", "budget"],
                "properties": {
                  "name": {
                    "type": "string",
                    "example": "Giant Corp"
                  },
                  "budget": {
                    "type": "integer",
                    "example": 4500
                  }
                }
              }
            }
          },
          "description": "Account to update"
        }
      },
      "delete": {
        "summary": "Deletes an account",
        "operationId": "deleteOneAccount",
        "description": "Deletes an account in the database",
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "schema": {
              "type": "integer",
              "minimum": 1,
              "example": 2
            },
            "description": "The account ID"
          }
        ],
        "responses": {
          "200": {
            "description": "Item deleted",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "string",
                      "example": "Account has been deleted"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "invalid id",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string",
                      "example": "Invalid account ID"
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Server error",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string",
                      "example": "The information could not be updated"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Account": {
        "type": "object",
        "required": ["id", "name", "budget"],
        "properties": {
          "id": {
            "type": "integer",
            "example": 1
          },
          "name": {
            "type": "string",
            "example": "ACME INC"
          },
          "budget": {
            "type": "integer",
            "example": 4267
          }
        }
      }
    }
  }
}
